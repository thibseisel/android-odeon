<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <ripple android:color="?colorControlHighlight" android:radius="24dp" />
            </item>
            <item>
                <shape android:shape="oval" android:tint="?android:colorControlActivated">
                    <size android:width="12dp" android:height="12dp" />
                    <solid android:color="@android:color/white" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <inset android:inset="6dp">
            <shape android:shape="oval" android:tint="?android:colorControlActivated">
                <size android:width="12dp" android:height="12dp" />
                <solid android:color="@android:color/white" />
            </shape>
        </inset>
    </item>
</selector>

