<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".exclusion.ExcludedTracksFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            style="@style/Widget.MaterialComponents.Toolbar.Surface"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:navigationIcon="@drawable/ui_ic_arrow_back_24dp"
            app:title="@string/track_exclusion_title" />
    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/feature_info_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="@dimen/grid_2"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        app:srcCompat="@drawable/ic_outline_info_24" />

    <TextView
        android:id="@+id/feature_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        app:layout_constraintStart_toEndOf="@id/feature_info_icon"
        android:textAppearance="?textAppearanceBody2"
        android:layout_marginStart="@dimen/grid_4"
        android:layout_marginTop="@dimen/grid_2"
        android:layout_marginEnd="@dimen/grid_2"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/track_exclusion_feature_description"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/feature_info_bottom_edge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:barrierMargin="@dimen/grid_2"
        app:constraint_referenced_ids="feature_info_icon,feature_description"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/track_list"
        style="@style/Widget.Odeon.List"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/feature_info_bottom_edge"
        tools:listitem="@layout/item_excluded_track" />

</androidx.constraintlayout.widget.ConstraintLayout>