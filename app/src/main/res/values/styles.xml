<resources>
    <!-- Style for SeekBar that removes horizontal padding. -->
    <style name="Widget.AppTheme.SeekBar.FullWidth" parent="Widget.AppCompat.SeekBar">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="Widget.AppTheme.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardMaxElevation">@dimen/core_card_max_elevation</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="Widget.AppTheme.CardView.Animated">
        <item name="android:stateListAnimator">@animator/card_state_list</item>
    </style>

    <style name="Widget.Odeon.ManageSpace.Label" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textAppearance">?textAppearanceBody1</item>
    </style>

    <style name="Widget.Odeon.ManageSpace.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="Widget.Odeon.ManageSpace.ResetButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

</resources>