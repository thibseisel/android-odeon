<resources>
    <!-- Style for SeekBar that removes horizontal padding. -->
    <style name="Widget.Odeon.SeekBar.FullWidth" parent="Widget.AppCompat.SeekBar">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="Widget.Odeon.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardMaxElevation">@dimen/core_card_max_elevation</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="Widget.Odeon.CardView.Animated">
        <item name="android:stateListAnimator">@animator/card_state_list</item>
    </style>

    <style name="Widget.Odeon.List.Offset">
        <item name="android:paddingBottom">80dp</item>
    </style>

    <style name="Widget.Odeon.Grid.Offset">
        <item name="android:paddingBottom">72dp</item>
    </style>
</resources>