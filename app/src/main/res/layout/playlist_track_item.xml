<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="72dp"
    android:background="?selectableItemBackground"
    android:textDirection="locale"
    android:paddingHorizontal="@dimen/grid_2"
    android:paddingVertical="@dimen/grid_2">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/album_art_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/album_art"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/grid_2"
        android:ellipsize="end"
        android:maxLines="@integer/song_title_max_lines"
        android:textAppearance="?textAppearanceBody1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/album_art_view"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@sample/songs.json/data/title" />

    <TextView
        android:id="@+id/subtitle_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/grid_0_5"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="?textAppearanceCaption"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/title"
        tools:text="@sample/songs.json/data/subtitle" />

</androidx.constraintlayout.widget.ConstraintLayout>